<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- الثيم الرئيسي للتطبيق بعد انتهاء الـ Splash -->
    <style name="Theme.MealFlow" parent="android:Theme.Material.Light.NoActionBar">
        <item name="postSplashScreenTheme">@style/Theme.MealFlow</item>
    </style>


    <!-- ثيم الـ Splash Screen -->
    <style name="Theme.MealFlow.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MealFlow</item>
    </style>

</resources>
