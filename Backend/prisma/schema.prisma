generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String   @db.VarChar(50)  // Limit name length
  username          String   @unique @db.VarChar(50) @default("user")
  email             String   @unique @db.VarChar(255) // Enforce standard email length
  password          String   @db.Text  // Hashes are long, so use Text
  isVerified        Boolean  @default(false)
  verificationCode  String?  @db.VarChar(6)  // Store 6-digit verification codes
  verificationExpiresAt DateTime? // Store expiry time for verification codes
  createdAt         DateTime @default(now())
}

